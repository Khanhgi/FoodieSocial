@{
    Layout = null;
}
<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <link href="~/Content/Css/User-contact.css" rel="stylesheet" />
    @*<link href="~/Content/Css/Main.css" rel="stylesheet" />*@
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.2.1/css/all.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" integrity="sha512-iecdLmaskl7CVkqkXNQ/ZH/XLlvWZOJyj7Yy7tcenmpD1ypASozpmT/E0iPtmFIB46ZmdtAc9eNBvH0H/ZpiBw==" crossorigin="anonymous" referrerpolicy="no-referrer" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
</head>
<body>
        <div id="contact_user" class="contact-user" style="max-width: 85%; width: 100%;">
            <div class="card" style="width: 45rem; border-radius: 10px; height: 350px; margin-top: 8rem; margin-left: 4rem; border: 1px solid #cbc9c9;">
                <div class="card-body">
                    <div class="friend-notification">
                    <img src="~/Content/Images/avadefault.jpg" alt="Avatar" style="width: 30px; height: 30px; border-radius: 50%; margin-right: 10px;">
                    <p class="card-text" style=" position: relative; left: 4rem; bottom: 2.5rem;">... sent you a friend request</p>
                    <button class="btn btn-outline-primary ms-2">Accept</button>
                    <button class="btn btn-outline-primary ms-2">Refuse</button>
                    <hr />
                </div>
                </div>
            </div>
            <footer>
                <p style="margin-left: 4rem; color: #a2a2a2;">&copy; @DateTime.Now.Year - Võ An Khánh  &copy;HUTECH University</p>
            </footer>
        </div>
</body>
</html>
