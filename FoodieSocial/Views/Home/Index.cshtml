            </div>
        </div>

        @*=========================================== User Contact ===========================================*@

        <div class="contact-user" style="max-width: 39%; width: 100%;">
            <div class="card" style="width: 40rem; border-radius: 10px; height: 350px; margin-top: 8rem; margin-left: 20px; border: 1px solid #cbc9c9;">
                <div class="card-body">
                    <img src="~/Content/Images/avadefault.jpg" alt="Avatar" style="width: 35px; height: 35px; border-radius: 50%; margin-right: 10px;"> 
                    <p class="card-text" style="flex: 1;">@Session["UserName"] đã gửi cho bạn lời mời kết bạn</p>
                </div>
            </div>
            <footer>
                <p style="margin-left: 20px; color: #a2a2a2;">&copy; @DateTime.Now.Year - Võ An Khánh.HUTECH University</p>
