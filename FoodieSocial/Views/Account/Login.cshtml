@model FoodieSocial.Models.User_profile

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Login To FoodieSocial</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" integrity="sha512-iecdLmaskl7CVkqkXNQ/ZH/XLlvWZOJyj7Yy7tcenmpD1ypASozpmT/E0iPtmFIB46ZmdtAc9eNBvH0H/ZpiBw==" crossorigin="anonymous" referrerpolicy="no-referrer" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">

</head>
<body>
    <section class="h-100 gradient-form" style="background-color: rgb(239 239 239);">
        <div class="container py-5 h-100 ">
            <div class="row d-flex justify-content-center align-items-center h-100">
                <div class="col-xl-10">
                    <div class="card rounded-3 text-black">
                        <div class="row g-0">
                            <div class="col-lg-6">
                                <div class="card-body p-md-5 mx-md-4">

                                    <div class="text-center">
                                        <img src="~/Content/Images/loginlogo.png" style="width: 210px;" alt="logo">
                                        <h4 class="mt-1 mb-5 pb-1">Foodie Social</h4>
                                    </div>
                                    @using (Html.BeginForm("Login", "Account", FormMethod.Post))
                                    {
                                        <form>
                                            <p>Login to your account</p>

                                            <div class="form-outline mb-4">
                                                @Html.TextBoxFor(model => model.Email, new { @class = "form-control form-control-lg", @placeholder = "Email" })
                                                @ViewData["!empty"]
                                            </div>

                                            <div class="form-outline mb-4">
                                                @Html.PasswordFor(model => model.PassWord, new { @class = "form-control form-control-lg", @placeholder = "Password" })
                                                @ViewData["!empty"]
                                                @ViewData["ErrorAccount"]
                                            </div>

                                            <div class="text-center pt-1 mb-5 pb-1">
                                                <button class="btn btn-primary btn-block fa-lg gradient-custom-2 mb-3" type="submit"> Login </button>
                                            </div>

                                            <div class="d-flex align-items-center justify-content-center pb-4">
                                                <p class="mb-0 me-2">Don't have an account?</p>
                                                <a href="@Url.Action("Register", "Account")" class="btn btn-outline-danger">Create new</a>
                                            </div>

                                        </form>
                                    }
                                </div>
                            </div>
                            <div class="col-lg-6 d-flex align-items-center gradient-custom-2">
                                <div class="text-white px-3 py-4 p-md-5 mx-md-4">
                                    <h4 class="mb-4">About Foodie Social Website</h4>
                                    <p class="small mb-0">
                                        Foodie Social is a unique social media website specifically designed for food enthusiasts. Combining an online community with a passion for gastronomy, Foodie Social provides an excellent platform for discovering, sharing, and interacting with the most delicious dishes from around the world.
                                        <br />
                                        <br />
                                        With Foodie Social, you can explore a diverse range of unique recipes, from traditional dishes to creative and indulgent delights. You can search for recipes by cuisine, ingredients, or even geographical origins. Whether you're a professional chef or simply someone eager to explore the culinary world, Foodie Social will provide you with endless inspiration.
                                    </p>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <style>
        .gradient-custom-2 {
            /* fallback for old browsers */
            background: #fccb90;
            /* Chrome 10-25, Safari 5.1-6 */
            background: -webkit-linear-gradient(to right, #ee7724, #d8363a, #dd3675, #b44593);
            /* W3C, IE 10+/ Edge, Firefox 16+, Chrome 26+, Opera 12+, Safari 7+ */
            background: linear-gradient(to right, #ee7724, #d8363a, #dd3675, #b44593);
        }
    </style>

</body>
</html>
